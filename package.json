{
  "name": "task-app-turborepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "start:bff:dev": "yarn workspace bff start:dev",
    "start:bff:docker": "cd $(pwd) && docker-compose -f apps/bff/docker-compose.yml up",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "prettier": "3.6.2",
    "turbo": "2.5.6",
    "typescript": "5.2.0"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "yarn@1.22.22",
  "workspaces": {
    "packages": [
      "apps/*",
      "libs/*"
    ],
    "nohoist": [
      "apps/bff/@prisma/client",
      "apps/bff/@prisma/client/**",
      "apps/bff/prisma",
      "apps/bff/prisma/**"
    ]
  }
}
